<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dev.api.core.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.dev.api.core.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, role)
        VALUES (#{username}, #{password}, 'ROLE_USER')
    </insert>

    <select id="existsByUsername" resultType="int">
        SELECT COUNT(*) FROM users WHERE username = #{username}
    </select>

    <select id="findByUsername" resultType="com.dev.api.core.model.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <update id="updateUser" parameterType="com.dev.api.core.model.User">
        UPDATE users
        SET password = #{password} -- 혹은 닉네임 등 추가 필드
        WHERE username = #{username}
    </update>

    <delete id="deleteByUsername">
        DELETE FROM users
        WHERE username = #{username}
    </delete>
</mapper>
